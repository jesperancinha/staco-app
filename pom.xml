        <commons-csv.version>1.11.0</commons-csv.version>
        <jakarta.validation-api.version>3.1.0</jakarta.validation-api.version>
        <omni-coveragereporter-maven-plugin.version>0.4.3</omni-coveragereporter-maven-plugin.version>
        <jacoco-maven-plugin.version>0.8.12</jacoco-maven-plugin.version>
        <r2dbc-postgresql.version>0.8.13.RELEASE</r2dbc-postgresql.version>

        <awssdk.version>2.25.67</awssdk.version>

        <kotlinx-coroutines-debug.version>1.8.1</kotlinx-coroutines-debug.version>
        <jaxb-api.version>2.3.1</jaxb-api.version>
        <validation-api.version>2.0.1.Final</validation-api.version>
        <springdoc-openapi-starter.version>2.5.0</springdoc-openapi-starter.version>
        <jackson-module-kotlin.version>2.17.1</jackson-module-kotlin.version>
    </properties>

    <modules>
        <module>stamps-and-coins-service</module>
        <module>stamps-and-coins-ls-service</module>
        <module>stamps-and-coins-cloud-service</module>
        <module>stamps-and-coins-common</module>
        <module>stamps-and-coins-common-cloud</module>
        <module>stamps-and-coins-batch</module>
        <module>stamps-and-coins-blocking-service</module>
    </modules>

    <packaging>pom</packaging>

    <dependencyManagement>

