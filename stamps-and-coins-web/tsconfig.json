{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2024",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["es2024", "dom"],
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "strictTemplates": true
  }
}
